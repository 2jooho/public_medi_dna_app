<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <!-- 깔끔하게 보여주기 위해 scaleType과 marginTop 속성을 줍니다. -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/fram1"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imagebtn_item1"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="@drawable/small_capsul"
            android:onClick="clickHandler"

            />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_gravity="top|center"
    android:background="@drawable/bugi2"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/text1_1"
            android:layout_gravity="bottom"
            android:text="부기\n티캡슐"
            android:textColor="#01133D"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:background="@drawable/stroke_market"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/text1_2"
            android:background="#00000000"
            />


    </FrameLayout>

</LinearLayout>