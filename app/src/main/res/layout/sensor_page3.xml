<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/fan"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/fan_w"
                        android:onClick="clickHandler" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="-14dp"
                        android:text="FAN"
                        android:id="@+id/fan_text"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/led"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/light_b"
                        android:onClick="clickHandler"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-21dp"
                        android:text="LED"
                        android:id="@+id/led_text"
                        android:textColor="#3A404C" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/pump"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/pump_b"
                        android:onClick="clickHandler"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-11dp"
                        android:text="Pump"
                        android:id="@+id/pump_text"
                        android:textColor="#3A404C" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/moter"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/motor_b"
                        android:onClick="clickHandler"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-27dp"
                        android:text="Moter"
                        android:id="@+id/moter_text"
                        android:textColor="#3A404C" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/th"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/temper_b"
                        android:onClick="clickHandler"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="-16dp"
                        android:text="T&amp;H"
                        android:id="@+id/th_text"
                        android:textColor="#3A404C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineartext"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_weight="2"
                    android:background="#803A404C" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/lottie_layout"
            app:layout_constraintTop_toBottomOf="@id/linearlayout"
            app:layout_constraintBottom_toBottomOf="parent">
        </FrameLayout>

</android.support.constraint.ConstraintLayout>