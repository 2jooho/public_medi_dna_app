<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/framelayout"
        app:layout_constraintBottom_toTopOf="@id/linearlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#12171D"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/information_line"
            android:background="#D8DBE3"
            />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#12171D"
    android:id="@+id/information_btn"
    android:layout_gravity="center"
    android:onClick="clickHandler"
    android:text="센서정보"
    android:textColor="#E1E1E1"
    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/auto_line"
                android:background="#00000000"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auto_btn"
                android:background="#12171D"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="자동 설정"
                android:onClick="clickHandler"
                android:textColor="#838589"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/sensor_line"
                android:background="#00000000"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#12171D"
                android:id="@+id/sensor_btn"
                android:onClick="clickHandler"
                android:text="센서 작동"
                android:textColor="#838589"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/plant_line"
                android:background="#00000000"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickHandler"
                android:id="@+id/plant_btn"
                android:background="#12171D"
                android:layout_gravity="center"
                android:text="식물 정보"
                android:textColor="#838589"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>